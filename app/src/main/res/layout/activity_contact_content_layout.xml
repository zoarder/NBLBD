<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_blog_list_content_layout_parent_vll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.nurdcoder.nblbd.activity.BlogDetailsActivity"
    tools:showIn="@layout/activity_contact">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/activity_contact_content_layout_parent_nsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/activity_contact_content_layout_parent_vll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/activity_contact_content_layout_parent_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_10dp"
                card_view:cardCornerRadius="@dimen/spacing_5dp"
                card_view:cardElevation="@dimen/spacing_5dp">

                <LinearLayout
                    android:id="@+id/activity_contact_content_layout_child_vll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activity_contact_content_layout_blog_description_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_10dp"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:text="@string/text_contact_title"/>

                    <TextView
                        android:id="@+id/activity_contact_content_layout_blog_date_time_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="@string/text_contact" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>