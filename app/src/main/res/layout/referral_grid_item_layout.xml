<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/referral_grid_item_layout_parent_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_5dp"
    android:layout_gravity="center"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="@dimen/spacing_5dp"
    card_view:cardElevation="@dimen/spacing_5dp">

    <LinearLayout
        android:id="@+id/referral_grid_item_layout_parent_vll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/spacing_5dp">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/referral_grid_item_layout_logo_niv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/referral_grid_item_layout_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="3"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>